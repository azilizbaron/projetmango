{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
  <div class="container formcontact_fond">
    <div class="row col-12">
    
      <div class="row col-12">
        <h1> Contactez-nous ! </h1>
    </div>

        <div class="column col-4 formcontact_petit contact-form ">

          <div class="form-group">
            {{ form_start(form) }}
            {{ form_row(form.Nom, {'attr': {'class': 'form-control'}}) }}
          </div>

          {{ form_start(form) }}
          {{ form_row(form.Prenom, {'attr': {'class': 'form-control'}}) }}

          <div class="form-group">
            {{ form_row(form.Email, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group">
            {{ form_row(form.Message, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="form-group ml-5 ">
            <input type="submit" value="Envoyer" class="btn btn-secondary py-3 px-5">
          </div>
          {{ form_end(form) }}
        </div>
        

       <div class="column col-6 contact-form mt-2 pl-5">
       <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d8252.03420501097!2d-1.6425998196274876!3d48.132583997259935!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x480ede93effce075%3A0x504cbdbf797e88ae!2sib%20-%20groupe%20Cegos%20Rennes!5e1!3m2!1sfr!2sfr!4v1623163858384!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
     </div> 
</div>
        
 
    </div>  



{% endblock %}
