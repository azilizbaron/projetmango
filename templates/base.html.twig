          {% block header %}
<div class="container">
    
<nav class="navbar navbar-expand-md navbar-light bg-light">
    <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="bi bi-twitter"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="bi bi-instagram"></i></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="bi bi-facebook"></i></a>
            </li>
        </ul>
    </div>

    <div class="mr-auto order-0">
       
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>

    <div class="navbar-collapse collapse w-200 order-2 order-ml-auto flex-nowrap">
        <ul class="navbar-nav ml-auto">
{# Onglet connexion visible uniquement sur la page login #}
    {% if is_granted('IS_ANONYMOUS')%}
  <li class="nav-item">
                 <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
            </li>
    {% else %}
    {% endif %}
{# Onglet inscription uniquement pour les non authentifiés #}
    {% if is_granted('IS_ANONYMOUS,ROLE_ADMIN')%}
           <li class="nav-item">
                <a class="nav-link" href="/projetmango/public/register">Inscription</a>
            </li>  
   {% else %}
   {% endif %}
{# Onglet admin uniquement pour l'admin #}
   {% if is_granted('ROLE_ADMIN') %}       
        <li class="nav-item">
              <a class="nav-link" href="#"><i class="fas fa-user-cog fa-2x"></i></a>
        </li> 
   {% endif %}
{# onglet mon compte pour tout le monde #}
  {% if is_granted('IS_ANONYMOUS')%}
  {% else %}
             <li class="nav-item">
                 <a class="nav-link" onMouseOver="Mon compte" href="/projetmango/public/edit/user"><i class="far fa-user-circle fa-2x"></i></a>
            </li>
  {% endif %}
  {# Onglet Déconnexion pour tout le monde sauf les non connectés #}
  {% if is_granted('IS_ANONYMOUS')%}
 
  {% else %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('app_logout') }}" ><i class="fas fa-sign-out-alt fa-2x"></i> </a>
            </li>
  {% endif %}
        </ul>
    </div>

</nav>
<div class="container">
<div class="row mt-2 mb-2">
<a class="px-0" href="{{path('accueil')}}"> <img src="{{ asset('img/Header.png')}}"  alt="header" class="img-fluid"> </a>


</div>
</div>
